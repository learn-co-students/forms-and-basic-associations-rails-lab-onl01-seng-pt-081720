<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

<br>
    <%# id="song_title" %>
    <%# song[title] %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br>


<br>
    <%# CUSTOM SETTER in SONG MODEL %>
    <%# id="song_artist_name" %>
    <%# song[artist_name] %>
  <%=f.label :artist_name%>
  <%=f.text_field :artist_name%>
<br>

<br>
<%=f.label :genre%>
<%=f.collection_select(:genre_id, Genre.all, :id, :name)%>

<br>
<br>
<%=f.label :song_notes_1%>
<input type="text" id="song_notes_1" name="song[song_notes][]">
<input type="text" id="song_notes_2" name="song[song_notes][]">
<br>
<br>


  <%= f.submit %>
<% end %>


